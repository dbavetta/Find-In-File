<Window x:Class="FindInFile_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindInFile_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700" MinHeight="350" MinWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Find group -->
        <GroupBox Header="Find">
            <StackPanel Orientation="Vertical">
                <DockPanel Name="findWhatStackPanel" Grid.Row="0">
                    <TextBlock Text="Find What:"/>
                    <TextBox Name="queryTextBox" Height="20" Margin="5,0"/>
                </DockPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button Name="findButton">
                        <TextBlock Text="FIND" Margin="15,5"/>
                    </Button>
                    <!-- Search options grid-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Grid.Row="0" Name="recursiveCheckBox" Content="Recursive" Checked="True" Margin="10,0"/>
                        <CheckBox Grid.Column="0" Grid.Row="1" Name="fuzzySearchCheckBox" Content="Fuzzy Search" Checked="True" Margin="10,0"/>
                        <CheckBox Grid.Column="1" Grid.Row="0" Name="matchCaseCheckBox" Content="Match Case" Checked="True"/>
                        <CheckBox Grid.Column="1" Grid.Row="1" Name="copyToClipboardCheckBox" Content="Copy Search To Clipboard" Checked="True"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <GroupBox Header="Folder Path">

            </GroupBox>
            <GroupBox Header="Filter">

            </GroupBox>
        </StackPanel>
        <DockPanel Name="statusBarDockPanel" Grid.Row="2" Grid.ColumnSpan="2">
            <StatusBar DockPanel.Dock="Bottom" />
        </DockPanel>
    </Grid>
</Window>
